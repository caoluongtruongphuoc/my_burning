<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="reviews.tab" remove="true"/>
        <referenceBlock name="product.info.details">                
            <referenceBlock name="product.info.description">
                <arguments>
                    <argument name="title" translate="true" xsi:type="string">Description</argument>
                    <argument name="sort_order" xsi:type="string">10</argument>
                </arguments>
            </referenceBlock>
            <block class="Magento\Catalog\Block\Product\View\Description" name="care.tab" template="Magento_Catalog::product/view/tab_care.phtml" group="detailed_info">
               <arguments>
                   <argument name="title" xsi:type="string">Care &#38; Warranty</argument>
                   <argument name="sort_order" xsi:type="string">20</argument>
               </arguments>
            </block>
            <block class="Magento\Catalog\Block\Product\View\Description" name="ship.tab" template="Magento_Catalog::product/view/tab_ship.phtml" group="detailed_info">
               <arguments>
                   <argument name="title" xsi:type="string">Shipping &#38; Delivery</argument>
                   <argument name="sort_order" xsi:type="string">30</argument>
               </arguments>
            </block>
            <block class="Magento\Catalog\Block\Product\View\Description" name="install.tab" template="Magento_Catalog::product/view/tab_install.phtml" group="detailed_info">
               <arguments>
                   <argument name="title" xsi:type="string">Installation Requirements</argument>
                   <argument name="sort_order" xsi:type="string">40</argument>
               </arguments>
            </block>
        </referenceBlock>

        <referenceBlock name="product.info.description">
            <block class="Magento\Framework\View\Element\Template" name="block.list" template="Magento_Catalog::product/view/tab_care.phtml" after="-"/>
        </referenceBlock>

        <move element="product.info.details" destination="product.info.media" after="-" />
        
        <move element="content.aside" destination="main.content" after="-"/>
    
    </body>
</page>
