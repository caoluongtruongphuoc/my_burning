<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    <move element="page.main.title" destination="page.bottom" />
    <move element="category.view.container" destination="page.bottom" after="page.main.title" />
        <referenceContainer name="columns.top">
            <container name="category-banner" label="category-banner" htmlClass="category-banner" htmlTag="div">
                <block class="Magento\Cms\Block\Block" name="burning-banner-listing" >
                    <arguments>
                        <argument name="block_id" xsi:type="string">burning-banner-listing</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
